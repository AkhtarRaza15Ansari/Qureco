<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sriyaan.qureco.EditPreference">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/menu"
        android:orientation="vertical">

        <include android:id="@+id/toolbar"
            layout="@layout/toolbar"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="5dp"
            card_view:cardCornerRadius="3dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvselectPreference"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="SELECT PREFERENCES"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:padding="10dp"
                    android:typeface="serif"
                    android:background="#5D5B5C"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.33"
                            android:background="@drawable/border_thin"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/doctor"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_margin="05dp"
                                android:src="@drawable/doctor" />

                            <TextView
                                android:id="@+id/tvdoctor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="DOCTOR"
                                android:textSize="13dp"
                                android:layout_margin="02dp"
                                android:textColor="@color/text_color" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.33"
                            android:background="@drawable/border_thin"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/clinics"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_margin="05dp"
                                android:src="@drawable/clinic" />

                            <TextView
                                android:id="@+id/tvclinics"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="CLINICS"
                                android:textSize="13dp"
                                android:layout_margin="02dp"
                                android:textColor="@color/text_color" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.33"
                            android:background="@drawable/border_thin"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/pathlab"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_margin="05dp"
                                android:src="@drawable/pathlab" />

                            <TextView
                                android:id="@+id/tvpathlab"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="PATHLAB"
                                android:textSize="13dp"
                                android:layout_margin="02dp"
                                android:textColor="@color/text_color" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.33"
                            android:background="@drawable/border_thin"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/fitness"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_margin="05dp"
                                android:src="@drawable/fitness" />

                            <TextView
                                android:id="@+id/tvfitness"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="FITNESS"
                                android:textSize="13dp"
                                android:layout_margin="02dp"
                                android:textColor="@color/text_color" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.33"
                            android:background="@drawable/border_thin"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/salon"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_margin="05dp"
                                android:src="@drawable/salon" />

                            <TextView
                                android:id="@+id/tvsalon"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="SALON"
                                android:textSize="13dp"
                                android:layout_margin="02dp"
                                android:textColor="@color/text_color" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.33"
                            android:background="@drawable/border_thin"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/spa"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_margin="05dp"
                                android:src="@drawable/spa" />

                            <TextView
                                android:id="@+id/tvspa"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="SPA"
                                android:textSize="13dp"
                                android:layout_margin="02dp"
                                android:textColor="@color/text_color" />
                        </LinearLayout>




                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.33"
                            android:background="@drawable/border_thin"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/pharmacy"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_margin="05dp"
                                android:src="@drawable/pharmacy" />

                            <TextView
                                android:id="@+id/tvpharmacy"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="PHARMACY"
                                android:textSize="13dp"
                                android:layout_margin="02dp"
                                android:textColor="@color/text_color" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.33"
                            android:background="@drawable/border_thin"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/hospital"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_margin="05dp"
                                android:src="@drawable/hospital" />

                            <TextView
                                android:id="@+id/tvhospital"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="HOSPITAL"
                                android:textSize="13dp"
                                android:layout_margin="02dp"
                                android:textColor="@color/text_color" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.33"
                            android:background="@drawable/border_thin"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/bloodbanks"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_margin="05dp"
                                android:src="@drawable/bloodbank" />

                            <TextView
                                android:id="@+id/tvbloodbank"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="BLOOD BANK"
                                android:textSize="13dp"
                                android:layout_margin="02dp"
                                android:textColor="@color/text_color" />
                        </LinearLayout>

                    </LinearLayout>



                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:background="@color/colorPrimary"
            android:text="@string/btn_edit_preference" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/menu"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F5F5F5"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/homell"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="02dp"
                android:id="@+id/home"
                android:tint="@color/unselected"
                android:src="@drawable/home_icon"
                />
            <TextView
                android:id="@+id/tvHome"
                android:textSize="10dp"
                android:textColor="@color/unselected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:typeface="serif"
                android:text="Home"
                android:singleLine="true"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/notificationll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="02dp"
                android:id="@+id/notification"
                android:tint="@color/unselected"
                android:src="@drawable/notification"
                />

            <TextView
                android:id="@+id/tvNotification"
                android:textSize="10dp"
                android:textColor="@color/unselected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:typeface="serif"
                android:text="Notification"
                android:singleLine="true"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/chatll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="02dp"
                android:id="@+id/chat"
                android:tint="@color/unselected"
                android:src="@drawable/chat"
                />
            <TextView
                android:id="@+id/tvChat"
                android:textSize="10dp"
                android:textColor="@color/unselected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:typeface="serif"
                android:text="Chat"
                android:singleLine="true"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/favouritesll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="02dp"
                android:id="@+id/favourites"
                android:tint="@color/unselected"
                android:src="@drawable/favourites"
                />
            <TextView
                android:id="@+id/tvFavourites"
                android:textSize="10dp"
                android:textColor="@color/unselected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:typeface="serif"
                android:text="Favourites"
                android:singleLine="true"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/accountsll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="02dp"
                android:id="@+id/accounts"
                android:tint="@color/unselected"
                android:src="@drawable/myaccounts"
                />
            <TextView
                android:id="@+id/tvAccounts"
                android:textSize="10dp"
                android:textColor="@color/unselected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:typeface="serif"
                android:singleLine="true"
                android:text="Accounts"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
