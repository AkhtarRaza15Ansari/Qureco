<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        card_view:cardElevation="5dp">
        <LinearLayout
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="03dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/offers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/offers"
                        android:text="OFFERS"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:padding="03dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        />
                    <ImageView
                        android:id="@+id/list_image"
                        android:layout_marginTop="01dp"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/hosp"
                        android:scaleType="centerCrop"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="03dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:textSize="15dp"
                            android:text="Name Here"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:gravity="left"
                            android:layout_marginLeft="5dp"
                            />
                        <TextView
                            android:id="@+id/followers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:textSize="12dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="11 Followers"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="05dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/loc"/>
                        <TextView
                            android:id="@+id/address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:textSize="13dp"
                            android:text="Majiwada Thane"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:layout_marginLeft="5dp"
                            />
                        <LinearLayout
                            android:id="@+id/ratings"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:gravity="center"
                            >
                            <ImageView
                                android:id="@+id/one"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_margin="01dp"
                                android:src="@drawable/star"/>
                            <ImageView
                                android:id="@+id/two"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_margin="01dp"
                                android:src="@drawable/star"/>
                            <ImageView
                                android:id="@+id/three"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_margin="01dp"
                                android:src="@drawable/star"/>
                            <ImageView
                                android:id="@+id/four"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_margin="01dp"
                                android:src="@drawable/star"/>
                            <ImageView
                                android:id="@+id/five"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_margin="01dp"
                                android:src="@drawable/star"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="05dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/cash"/>
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/rs"/>
                        <TextView
                            android:id="@+id/cash"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:textSize="13dp"
                            android:text=""
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:layout_marginLeft="5dp"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:gravity="center"
                            >
                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/likes"/>
                            <TextView
                                android:id="@+id/likes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="13dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="1240 likes"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="05dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="15dp"
                            android:src="@drawable/distance"/>
                        <TextView
                            android:id="@+id/distance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.33"
                            android:textSize="11dp"
                            android:text="3.5 KM"
                            android:paddingTop="05dp"
                            android:paddingBottom="05dp"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:layout_marginLeft="5dp"
                            />
                        <LinearLayout
                            android:id="@+id/lldirection"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.33"
                            android:orientation="horizontal"
                            android:background="@color/navigate"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginRight="2dp"
                            >
                            <ImageView
                                android:paddingLeft="02dp"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:src="@drawable/navigate"/>
                            <TextView
                                android:id="@+id/direction"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="11dp"
                                android:paddingLeft="02dp"
                                android:paddingTop="05dp"
                                android:paddingBottom="05dp"
                                android:textColor="@color/white"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text="NAVIGATE"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llcall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.33"
                            android:orientation="horizontal"
                            android:background="@color/call"
                            android:paddingTop="05dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:paddingBottom="05dp"
                            android:layout_marginLeft="2dp"
                            >
                            <ImageView
                                android:paddingLeft="02dp"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:src="@drawable/calll"/>
                            <TextView
                                android:id="@+id/call"
                                android:paddingLeft="02dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="11dp"
                                android:textColor="@color/white"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text="CALL"
                                />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <CheckBox
                android:id="@+id/chkcompare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add to Compare"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
