<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sriyaan.qureco.DetailsPage">

    <ScrollView
        android:layout_above="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/foreground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp">

                        <ImageView
                            android:id="@+id/topimage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/hospc"
                            />
                        <ImageView
                            android:id="@+id/back"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="20dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/back"
                            />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/tvname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:text="Jupiter Hospital"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="05dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/location"
                                android:tint="@color/black"/>
                            <TextView
                                android:id="@+id/address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="Majiwada, Thane (W)"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@color/navigate"
                                android:layout_marginLeft="10dp"
                                android:paddingRight="10dp"
                                android:paddingLeft="03dp"
                                android:paddingTop="05dp"
                                android:paddingBottom="05dp">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginRight="10dp"
                                    android:src="@drawable/navigate"/>
                                <TextView
                                    android:id="@+id/navigate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14dp"
                                    android:text="NAVIGATE"
                                    android:textColor="@color/white"/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="01dp"
                        android:background="@color/transparenta"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="05dp"
                        android:layout_marginBottom="05dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="05dp"
                        android:layout_marginBottom="05dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="0.34">
                            <TextView
                                android:id="@+id/reviews_count"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:text="200 Reviews"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_weight="0.33">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/star1"
                                    android:src="@drawable/outlinestar"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/star2"
                                    android:src="@drawable/outlinestar"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/star3"
                                    android:src="@drawable/outlinestar"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/star4"
                                    android:src="@drawable/outlinestar"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/star5"
                                    android:src="@drawable/outlinestar"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="0.33">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/likes"/>
                                <TextView
                                    android:id="@+id/likes"
                                    android:text="3560"
                                    android:layout_marginLeft="05dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="01dp"
                        android:background="@color/transparenta"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/opennow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:text="Open now: "
                            />
                        <TextView
                            android:id="@+id/opentimings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:text=" 10 AM to 12 PM"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/call"
                            android:layout_marginLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingLeft="03dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:paddingTop="05dp"
                            android:paddingBottom="05dp">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/calll"/>
                            <TextView
                                android:id="@+id/tvcall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:text="Call"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/chat"
                            android:layout_marginLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingLeft="03dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:paddingTop="05dp"
                            android:paddingBottom="05dp">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/chatabc"/>
                            <TextView
                                android:id="@+id/tvchat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:text="Chat"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/follow"
                            android:layout_marginLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingLeft="03dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:paddingTop="05dp"
                            android:paddingBottom="05dp">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/follow"/>
                            <TextView
                                android:id="@+id/tvfollow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:text="Follow"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/one"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:id="@+id/deals"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:padding="10dp"
                                android:background="@drawable/border_thin"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/imgdeals"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/dealsandoffers"/>
                                <TextView
                                    android:id="@+id/tvdeals"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Deals &amp; Offers"
                                    />

                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/amenities"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:padding="10dp"
                                android:background="@drawable/border_thin"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/imgamenities"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/amenities"/>
                                <TextView
                                    android:id="@+id/tvamenities"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Amenities"
                                    />

                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/two"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:id="@+id/specialities"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:padding="10dp"
                                android:background="@drawable/border_thin"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/imgspecialities"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/specialities"/>
                                <TextView
                                    android:id="@+id/tvspecialities"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Specialities"
                                    />

                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/services"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:padding="10dp"
                                android:background="@drawable/border_thin"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/imgservices"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/service"/>
                                <TextView
                                    android:id="@+id/tvservices"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Services"
                                    />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/three"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:id="@+id/availability"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:padding="10dp"
                                android:background="@drawable/border_thin"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/imgavailability"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/availability"/>
                                <TextView
                                    android:id="@+id/tvavailability"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Availability"
                                    />

                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/location"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:padding="10dp"
                                android:background="@drawable/border_thin"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/imglocation"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/locationaddr"/>
                                <TextView
                                    android:id="@+id/tvlocation"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Location &amp; Address"
                                    />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/four"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:id="@+id/about"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:padding="10dp"
                                android:background="@drawable/border_thin"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/imgabout"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/doctors"/>
                                <TextView
                                    android:id="@+id/tvabout"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="About"
                                    />

                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/equipments"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:padding="10dp"
                                android:background="@drawable/border_thin"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/imgequipments"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/equipments"/>
                                <TextView
                                    android:id="@+id/tvequipments"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Equipments"
                                    />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/five"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:id="@+id/social"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:padding="10dp"
                                android:background="@drawable/border_thin"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/imgsocial"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/social_links"/>
                                <TextView
                                    android:id="@+id/tvsocial"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Social Link"
                                    />

                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/writereview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:padding="10dp"
                                android:background="@drawable/border_thin"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/imgwritereview"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/write_review"/>
                                <TextView
                                    android:id="@+id/tvwritereview"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Write Review"
                                    />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/menu"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F5F5F5"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/homell"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="02dp"
                android:id="@+id/home"
                android:tint="@color/unselected"
                android:src="@drawable/home_icon"
                />
            <TextView
                android:id="@+id/tvHome"
                android:textSize="10dp"
                android:textColor="@color/unselected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:typeface="serif"
                android:text="Home"
                android:singleLine="true"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/notificationll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="02dp"
                android:id="@+id/notification"
                android:tint="@color/unselected"
                android:src="@drawable/notification"
                />

            <TextView
                android:id="@+id/tvNotification"
                android:textSize="10dp"
                android:textColor="@color/unselected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:typeface="serif"
                android:text="Notification"
                android:singleLine="true"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/chatll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="02dp"
                android:id="@+id/chat"
                android:tint="@color/unselected"
                android:src="@drawable/chat"
                />
            <TextView
                android:id="@+id/tvChat"
                android:textSize="10dp"
                android:textColor="@color/unselected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:typeface="serif"
                android:text="Chat"
                android:singleLine="true"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/favouritesll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="02dp"
                android:id="@+id/favourites"
                android:tint="@color/unselected"
                android:src="@drawable/favourites"
                />
            <TextView
                android:id="@+id/tvFavourites"
                android:textSize="10dp"
                android:textColor="@color/unselected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:typeface="serif"
                android:text="Favourites"
                android:singleLine="true"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/accountsll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="02dp"
                android:id="@+id/accounts"
                android:tint="@color/unselected"
                android:src="@drawable/myaccounts"
                />
            <TextView
                android:id="@+id/tvAccounts"
                android:textSize="10dp"
                android:textColor="@color/unselected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
