<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="05dp"
                android:src="@drawable/doctor" />

            <TextView
                android:id="@+id/tvdoctors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="DOCTOR"
                android:textSize="13dp"
                android:layout_margin="02dp"
                android:textColor="@color/text_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/clinics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="05dp"
                android:src="@drawable/clinic" />

            <TextView
                android:id="@+id/tvclinics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="CLINICS"
                android:textSize="13dp"
                android:layout_margin="02dp"
                android:textColor="@color/text_color" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/pathlab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="05dp"
                android:src="@drawable/pathlab" />

            <TextView
                android:id="@+id/tvpathlab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="PATHLAB"
                android:textSize="13dp"
                android:layout_margin="02dp"
                android:textColor="@color/text_color" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>